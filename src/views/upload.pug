extends layout

block content
  article.upload
    header.upload-header
      h1 Upload Photo
    
    form#uploadForm.upload-form
      .drop-zone#dropZone
        input#fileInput.file-input(type="file" accept="image/*" max="10485760")
        .drop-zone-content
          .icon
            svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24")
              path(d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z")
          button.button(type="button") Browse Files
          p or drag and drop
          p.small PNG, JPG, GIF up to 10MB

      .progress-bar#progressBar
        .progress-bar-fill

      .preview#preview
        img#previewImage(src="" alt="Preview")
        .preview-actions
          button#retryButton.button.secondary(type="button") Retry
          button#confirmButton.button.primary(type="submit") Upload

      .success-message#successMessage
        p Photo uploaded successfully!
        a(href="/photos") View in gallery

block scripts
  script(src="/js/main.js") 