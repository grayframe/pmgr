extends layout

block content
  .max-w-2xl.mx-auto
    .bg-white.shadow.rounded-lg.p-6
      h1.text-2xl.font-bold.text-gray-900.mb-6 Upload Photo
      
      #upload-container.border-2.border-dashed.border-gray-300.rounded-lg.p-8.text-center.cursor-pointer.transition-colors.duration-200.hover:border-blue-500
        .space-y-4
          svg.mx-auto.h-12.w-12.text-gray-400(xmlns="http://www.w3.org/2000/svg", fill="none", viewBox="0 0 24 24", stroke="currentColor")
            path(stroke-linecap="round", stroke-linejoin="round", stroke-width="2", d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z")
          .text-gray-600
            p Drag and drop your photo here, or
            button#browse-button.mt-2.text-blue-600.hover:text-blue-800.font-medium Browse
            input#file-input.hidden(type="file", accept="image/*")
          p.text-sm.text-gray-500 Supports: JPG, PNG, GIF (max 10MB)
      
      #upload-progress.hidden.mt-6
        .relative.pt-1
          .flex.mb-2.items-center.justify-between
            div
              span.text-xs.font-semibold.inline-block.py-1.px-2.uppercase.rounded-full.text-blue-600.bg-blue-200#upload-status
            .text-right
              span.text-xs.font-semibold.inline-block.text-blue-600#upload-percentage
          .overflow-hidden.h-2.mb-4.text-xs.flex.rounded.bg-blue-200
            .shadow-none.flex.flex-col.text-center.whitespace-nowrap.text-white.justify-center.bg-blue-500#upload-bar(style="width: 0%")
      
      #upload-preview.mt-6.hidden
        img.rounded-lg.shadow-lg.max-h-96.mx-auto#preview-image
        .mt-4.flex.justify-center.space-x-4
          button#retry-button.bg-red-500.text-white.px-4.py-2.rounded.hover:bg-red-600 Retry
          button#confirm-button.bg-green-500.text-white.px-4.py-2.rounded.hover:bg-green-600 Confirm
      
      #upload-success.hidden.mt-6.text-center
        .text-green-600.mb-4
          svg.mx-auto.h-12.w-12(xmlns="http://www.w3.org/2000/svg", fill="none", viewBox="0 0 24 24", stroke="currentColor")
            path(stroke-linecap="round", stroke-linejoin="round", stroke-width="2", d="M5 13l4 4L19 7")
        p.text-xl.font-semibold.text-gray-900 Photo uploaded successfully!
        a.text-blue-600.hover:text-blue-800.mt-2.inline-block(href="/") View in gallery 