doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Photo App
    link(href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css", rel="stylesheet")
    script(src="/socket.io/socket.io.js")
  body.bg-gray-100
    nav.bg-white.shadow-lg
      .max-w-7xl.mx-auto.px-4
        .flex.justify-between.h-16
          .flex
            .flex-shrink-0.flex.items-center
              a.text-xl.font-bold.text-gray-800(href="/") Photo App
            .hidden.sm:ml-6.sm:flex.sm:space-x-8
              a.border-transparent.text-gray-500.hover:border-gray-300.hover:text-gray-700.inline-flex.items-center.px-1.pt-1.border-b-2.text-sm.font-medium(href="/") Home
              a.border-transparent.text-gray-500.hover:border-gray-300.hover:text-gray-700.inline-flex.items-center.px-1.pt-1.border-b-2.text-sm.font-medium(href="/upload") Upload
          .flex.items-center
            if user
              .flex.items-center.space-x-4
                img.h-8.w-8.rounded-full(src=user.profilePicture || '/default-avatar.png', alt=user.displayName)
                span.text-gray-700= user.displayName
                a.text-gray-500.hover:text-gray-700(href="/auth/logout") Logout
            else
              a.text-gray-500.hover:text-gray-700(href="/auth/login") Login

    main.max-w-7xl.mx-auto.py-6.sm:px-6.lg:px-8
      block content

    script(src="/js/main.js") 