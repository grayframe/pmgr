extends layout

block content
  .container.mx-auto.px-4.py-8
    .max-w-2xl.mx-auto
      .bg-white.rounded-lg.shadow-lg.p-6
        h1.text-3xl.font-bold.text-gray-900.mb-6 Create New Album

        form(action="/albums" method="POST")
          //- Album Name
          .mb-4
            label.block.text-sm.font-medium.text-gray-700(for="name") Album Name
            input#name.w-full.mt-1.rounded-md.border-gray-300.shadow-sm.focus:border-blue-500.focus:ring-blue-500(type="text" name="name" required)

          //- Description
          .mb-6
            label.block.text-sm.font-medium.text-gray-700(for="description") Description
            textarea#description.w-full.mt-1.rounded-md.border-gray-300.shadow-sm.focus:border-blue-500.focus:ring-blue-500(rows="4" name="description")

          //- Photo Selection
          .mb-6
            label.block.text-sm.font-medium.text-gray-700.mb-2 Select Photos
            if photos.length > 0
              .grid.grid-cols-2.md:grid-cols-3.gap-4
                each photo in photos
                  .relative
                    input.absolute.top-2.right-2(type="checkbox" name="photos[]" value=photo.id id=`photo-${photo.id}`)
                    label.block.cursor-pointer(for=`photo-${photo.id}`)
                      img.w-full.h-32.object-cover.rounded-lg(src=photo.url alt=photo.title)
                      .mt-1.text-sm.text-gray-900.truncate= photo.title
            else
              .text-center.py-8.bg-gray-50.rounded-lg
                svg.mx-auto.h-12.w-12.text-gray-400(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
                  path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z")
                h3.mt-2.text-sm.font-medium.text-gray-900 No photos available
                p.mt-1.text-sm.text-gray-500 Upload some photos first to create an album.
                .mt-6
                  a.inline-flex.items-center.px-4.py-2.border.border-transparent.shadow-sm.text-sm.font-medium.rounded-md.text-white.bg-blue-600.hover:bg-blue-700(href="/upload")
                    | Upload Photos

          //- Submit Buttons
          .flex.justify-end.space-x-4
            a.bg-gray-500.hover:bg-gray-600.text-white.font-semibold.py-2.px-4.rounded(href="/albums")
              | Cancel
            button.bg-blue-500.hover:bg-blue-600.text-white.font-semibold.py-2.px-4.rounded(type="submit")
              | Create Album

