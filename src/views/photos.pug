extends layout

block content
  article.photos
    header.photos-header
      h1 Your Photos
      a.button(href="/photos/upload") Upload Photo

    section.photos-grid
      if photos.length === 0
        .empty-state
          p You haven't uploaded any photos yet.
          a.button(href="/photos/upload") Upload your first photo
      else
        each photo in photos
          .photo-card
            img(src=photo.url alt=photo.title)
            .photo-info
              h3= photo.title
              if photo.description
                p= photo.description
              .photo-actions
                a.button(href=`/photos/${photo.id}/edit`) Edit
                a.button.delete(href=`/photos/${photo.id}/delete`) Delete 