extends layout

block content
  // Debug section
  .debug-section
    h2 Debug Info
    pre
      | Is Authenticated: #{isAuthenticated}
      | User: #{JSON.stringify(user, null, 2)}
      | Session: #{JSON.stringify(session, null, 2)}
      | Request Headers: #{JSON.stringify(headers, null, 2)}

  article.welcome
    header.welcome-header
      h1 Welcome to Photo Manager
      p Organize and share your photos with ease

    section.features
      h2 Features
      ul
        li
          span.icon ✓
          p Upload and organize your photos
        li
          span.icon ✓
          p Create albums to group related photos
        li
          span.icon ✓
          p Share photos with friends and family
        li
          span.icon ✓
          p Real-time updates and collaboration

    section.actions
      a.button.primary(href="/auth/login") Sign in
      a.button.secondary(href="/auth/register") Create an account 